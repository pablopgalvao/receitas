<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner header-flex">
      <div class="title-block">
        <% if (theme.subtitle || config.subtitle){ %>
          <h2 id="subtitle-wrap">
            <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle || config.subtitle %></a>
          </h2>
        <% } %>
        <h1 id="logo-wrap">
          <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
        </h1>
      </div>

        <a id="header-btn" href="https://play.google.com/store/apps/details?id=com.pablo614.Boil" target="_blank" rel="noopener">
          Baixar o Aplicativo
        </a>
    </div>

    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"><span class="fa fa-bars"></span></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
      <nav id="sub-nav">
        <% if (theme.links) { %>
          <% for (const i in theme.links) {%>
            <a class="nav-icon" href="<%- url_for(theme.links[i]) %>"><span class="fa fa-<%= i %>"></span></a>
          <% } %>
        <% } %>
        <% if (theme.rss){ %>
          <a class="nav-icon" href="https://play.google.com/store/apps/details?id=com.pablo614.Boil" title="Baixar Aplicativo"><span class="fa fa-google-play"></span></a>
        <% } %>
      </nav>
      <div id="search-form-wrap">
        <%- search_form({button: '&#xF002;', text: __('search')}) %>
      </div>
    </div>
  </div>
</header>
